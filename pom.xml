<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.cirnoworks.fisce</groupId>
	<artifactId>libfisce</artifactId>
	<packaging>jar</packaging>
	<version>2.0.0-SNAPSHOT</version>
	<name>FiScE VM Native libs</name>
	<url>http://libfisce.googlecode.com</url>
	<parent>
		<groupId>com.cirnoworks</groupId>
		<artifactId>parent</artifactId>
		<version>2</version>
	</parent>
	<scm>
		<connection>scm:svn:http://libfisce.googlecode.com/svn/trunk</connection>
		<developerConnection>scm:svn:https://libfisce.googlecode.com/svn/trunk</developerConnection>
		<url>http://libfisce.googlecode.com/svn</url>
	</scm>
	<properties>
		<cw.svnbase>https://libfisce.googlecode.com/svn</cw.svnbase>
	</properties>
	<repositories>
		<repository>
			<id>cirnoworks</id>
			<name>Cirnoworks</name>
			<url>http://repo.cirnoworks.com/nexus/content/groups/public/</url>
			<layout>default</layout>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugin.cmake.ng</groupId>
				<artifactId>cmake-ng</artifactId>
				<version>1.0</version>
				<executions>
					<execution>
						<id>cmake-generate-linux</id>
						<phase>process-sources</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<output>${project.build.directory}/output/linux</output>
							<source>${basedir}/src/main/c</source>
							<vars>
								<CMAKE_BUILD_TYPE>Release</CMAKE_BUILD_TYPE>
								<ENABLE_TEST>ON</ENABLE_TEST>
							</vars>
						</configuration>
					</execution>

					<execution>
						<id>cmake-generate-win32</id>
						<phase>process-sources</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<output>${project.build.directory}/output/win32</output>
							<source>${basedir}/src/main/c</source>
							<vars>
								<CMAKE_BUILD_TYPE>Release</CMAKE_BUILD_TYPE>
								<CMAKE_TOOLCHAIN_FILE>${basedir}/src/main/c/mingw32.toolchain.cmake</CMAKE_TOOLCHAIN_FILE>
								<COMPILER_PREFIX>i486-mingw32</COMPILER_PREFIX>
							</vars>
						</configuration>
					</execution>

					<execution>
						<id>cmake-generate-android-arm</id>
						<phase>process-sources</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<output>${project.build.directory}/output/android-arm</output>
							<source>${basedir}/src/main/c</source>
							<vars>
								<CMAKE_BUILD_TYPE>Release</CMAKE_BUILD_TYPE>
								<CMAKE_TOOLCHAIN_FILE>${basedir}/src/main/c/android.toolchain.cmake</CMAKE_TOOLCHAIN_FILE>
								<LIBRARY_OUTPUT_PATH_ROOT>.</LIBRARY_OUTPUT_PATH_ROOT>
								<ANDROID_ABI>armeabi</ANDROID_ABI>
								<ANDROID_NATIVE_API_LEVEL>android-4</ANDROID_NATIVE_API_LEVEL>
							</vars>
						</configuration>
					</execution>

					<execution>
						<id>cmake-generate-android-x86</id>
						<phase>process-sources</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<output>${project.build.directory}/output/android-x86</output>
							<source>${basedir}/src/main/c</source>
							<vars>
								<CMAKE_BUILD_TYPE>Release</CMAKE_BUILD_TYPE>
								<CMAKE_TOOLCHAIN_FILE>${basedir}/src/main/c/android.toolchain.cmake</CMAKE_TOOLCHAIN_FILE>
								<LIBRARY_OUTPUT_PATH_ROOT>.</LIBRARY_OUTPUT_PATH_ROOT>
								<ANDROID_ABI>x86</ANDROID_ABI>
								<ANDROID_NATIVE_API_LEVEL>android-9</ANDROID_NATIVE_API_LEVEL>
							</vars>
						</configuration>
					</execution>
					<execution>
						<id>cmake-generate-android-linux-test</id>
						<phase>process-sources</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<binary>${project.build.directory}/output/linux/fisce-test</binary>
							<testName>fisce-test</testName>
							<results>${project.build.directory}/results</results>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<configuration>
							<descriptors>
								<descriptor>assembly-linux.xml</descriptor>
								<descriptor>assembly-win32.xml</descriptor>
								<descriptor>assembly-android.xml</descriptor>
							</descriptors>
						</configuration>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
					<execution>
						<configuration>
							<descriptors>
								<descriptor>assembly-test.xml</descriptor>
							</descriptors>
						</configuration>
						<id>make-assembly-test</id>
						<phase>test-compile</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugin.cmake.ng
										</groupId>
										<artifactId>
											cmake-ng
										</artifactId>
										<versionRange>
											[1.0,)
										</versionRange>
										<goals>
											<goal>compile</goal>
											<goal>test</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-assembly-plugin
										</artifactId>
										<versionRange>
											[2.4,)
										</versionRange>
										<goals>
											<goal>single</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.cirnoworks.fisce</groupId>
			<artifactId>fiscevm-runtime</artifactId>
			<version>2.0.0-SNAPSHOT</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>

