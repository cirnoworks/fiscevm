echo $ANDROID_ROOT
export CFLAGS="-I$ANDROID_ROOT/platforms/android-4/arch-arm/usr/include -nostdlib" 
export LDFLAGS="-Wl,-rpath-link=$ANDROID_ROOT/platforms/android-4/arch-arm/usr/lib -L$ANDROID_ROOT/platforms/android-4/arch-arm/usr/lib" 
export LIBS="-lc -lgcc" 
./configure --prefix=$PWD/dist --host=arm-linux-androideabi $@
