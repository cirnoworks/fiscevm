<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>android</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- 直接拷贝mydate97的皮肤和多国语言文件 -->
		<fileSet>
			<directory>${project.build.directory}/output/android-arm/libs/armeabi</directory>
			<includes>
			    <include>**/*.so</include>
			</includes>
			<outputDirectory>libs/armeabi</outputDirectory>
		</fileSet>
		<!-- 直接拷贝mydate97的皮肤和多国语言文件 -->
		<fileSet>
			<directory>${project.build.directory}/output/android-x86/libs/x86</directory>
			<includes>
			    <include>**/*.so</include>
			</includes>
			<outputDirectory>libs/x86</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
	    <file>
			<source>${basedir}/src/main/resources/AUTHORS</source>
			<outputDirectory>libs</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/resources/README</source>
			<outputDirectory>libs</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/resources/COPYING</source>
			<outputDirectory>libs</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/resources/COPYING.LESSER</source>
			<outputDirectory>libs</outputDirectory>
		</file>
	</files>
	
</assembly>