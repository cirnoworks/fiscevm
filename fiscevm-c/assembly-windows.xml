<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>windows</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/libfisce-out/win32</directory>
			<includes>
			    <include>*.dll</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/libfisce-out/win64</directory>
			<includes>
			    <include>*.dll</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/c</directory>
			<includes>
				<include>*.c</include>
				<include>**/*.h</include>
				<include>*.cmake</include>
				<include>CMakeLists.txt</include>
			</includes>
			<outputDirectory>/src/</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
	    <file>
			<source>${basedir}/src/main/resources/com/cirnoworks/libfisce/shell/AUTHORS</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/resources/com/cirnoworks/libfisce/shell/README</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/resources/com/cirnoworks/libfisce/shell/COPYING</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/resources/com/cirnoworks/libfisce/shell/COPYING.LESSER</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>