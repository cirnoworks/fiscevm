<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>win32</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
	    <file>
	        <source>${project.build.directory}/output/win32/libfisce.dll</source>
	        <destName>fisce.dll</destName>
	        <outputDirectory>com/cirnoworks/libfisce/jni</outputDirectory>
	    </file>
	    <file>
	        <source>${project.build.directory}/output/win32/libfyjni.dll</source>
	        <destName>fyjni.dll</destName>
	        <outputDirectory>com/cirnoworks/libfisce/jni</outputDirectory>
	    </file>
		<file>
			<source>${basedir}/src/main/c/README</source>
			<outputDirectory>com/cirnoworks/libfisce/jni</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/c/COPYING</source>
			<outputDirectory>com/cirnoworks/libfisce/jni</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/c/COPYING.LESSER</source>
			<outputDirectory>com/cirnoworks/libfisce/jni</outputDirectory>
		</file>
	</files>
</assembly>